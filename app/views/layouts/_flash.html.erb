<% if notice.present? %>
  <div class="flash alert alert-success">
    <%= notice %>
    <button class="close" data-dismiss="alert">×</button>
  </div>
<% end %>
<% if alert.present? %>
  <div class="flash alert alert-danger">
    <%= alert %>
    <button class="close" data-dismiss="alert">×</button>
  </div>
<% end %>

